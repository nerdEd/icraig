<% form_tag( { :action => 'search' }, { :selected => 'true', :class => 'panel', :id => 'content' } ) do %>	
	<fieldset>
		<p class="trail">
			<%= breadcrumbs %>
		</p>
		<p style="text-align:center;">
			<%= text_field :search, :terms %>
		</p>
		<p style="text-align:center;">
			<%= check_box :search, :only_search_titles %>
			<label>Only Search Titles</label>

			<%= check_box :search, :has_image %>
			<label>Has Image</label>
		</p>
	</fieldset>
	<%= submit_tag 'Search'%>
<% end -%>
<ul id="content">
	<% if !@location.sub_locations.empty? then %>
		<% @location.sub_locations.each do | sub_location | %>
			<li><%= link_to_remote sub_location.name, 
								   {:url => primary_location_sub_location_url( @location, sub_location ), :method => :get},
								   {:href => primary_location_sub_location_url( @location, sub_location ),
									:ajax_url => 'sub_location'} %></li>
		<% end %>
	<% else %>
		<% @location.primary_categories.each do | primary_category | %>
			<li><%= link_to_remote primary_category.name, 
						    {:url => primary_location_primary_category_url( @location, primary_category ), :method => :get},
						 	{:href => primary_location_primary_category_url( @location, primary_category ),
							 :ajax_url => 'primary_category'}%></li>
		<% end %>
	<% end %>
</ul>	